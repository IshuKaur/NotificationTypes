<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ishpreetkaur.notificationtypes.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNoti"
        android:layout_centerHorizontal="true"
        android:text="Text Notifications"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageNoti"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textNoti"
        android:layout_marginTop="30dp"
        android:text="image notification"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadNoti"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageNoti"
        android:layout_marginTop="30dp"
        android:text="load notification"/>

</RelativeLayout>
